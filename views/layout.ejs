<!doctype html>
<html lang="pt-br">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <link rel="stylesheet" href="public\css\style.css">

    <!-- JavaScript compiler - Babel -->
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>

    <!-- JavaScript customizado -->
    <script type="text/babel" src="public\js\script.js"></script>

    <!-- Fivecon -->
    <link rel="shortcut icon" href="public\img\fivecon.png" type="image/x-icon">

    <title>App - Kanban</title>
  </head>
  <body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">

            <div class="container">
                <a class="navbar-brand" href="#">KanbanBoard</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
            
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Central de protocolos
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#"  data-toggle="modal" data-target="#formProtocolo" onclick="formularioDefault()">Criar novo protocolo</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#" onclick="">Listar Pessoas</a>
                    </div>
                    </li>
                </ul>
                </div>
            </div>
            
          </nav>
    </header>

    <!-- Principal -->
    <%- colunas %>

    <section>
      <form id="form_protocolo">
        <!-- Formulário de protocolo -->
        <div class="modal fade" id="formProtocolo" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">Criar novo protocolo</h5> 
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">

                <div> <!-- div formulario -->
                  <div class="form-group">
                    <div class="row d-flex justify-content-end">
                      
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="select_status">Status:</label>
                    <select class="form-control" id="select_status" name="select_status" required>
                      <option selected value="1">Caixa de entrada</option>
                      <option value="2">Em execução</option>
                      <option value="3">Em aprovação</option>
                      <option value="4">Aguardando versão</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="recipient_name" class="col-form-label">Título do protocolo:</label>
                    <input type="text" class="form-control" id="recipient_name" name="recipient_name" required>
                  </div>
                  <div class="form-group">
                    <label for="message_text" class="col-form-label">Descrição:</label>
                    <textarea class="form-control" id="message_text" name="message_text" required></textarea>
                  </div>
                  <div class="form-group">
                    <label for="tipo_protocolo" class="col-form-label">Tipo de protocolo:</label>
                    <select class="form-control" id="tipo_protocolo" name="tipo_protocolo" required>
                        <option value=""></option> 
                        <option value="i">Inconsistência</option> 
                        <option value="n">Novo recurso</option>
                        <option value="m">Melhoria</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button id="btn_salvar_protocolo" type="submit" class="btn btn-primary">Salvar</button>
              </div>
            </div>
          </div>
        </div>
      </form>
    </section>

    <section>
      <div class="modal fade" id="modalTabelaPessoa" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="ModalLabel2">Lista de Pessoas</h5> 
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">

              <table class="table" id="tabela-pessoa">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">CPF</th>
                    <th scope="col">Idade</th>
                  </tr>
                </thead>
                <tbody id="tabela-linhas-pessoa"></tbody>
              </table>

              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

